{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Jaka-Kiosk",
  "version": "0.1.0",
  "identifier": "com.jaka-kiosk.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist",
    "removeUnusedCommands": false
  },

  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Jaka Kiosk",
        "width": 600,
        "height": 1000
      }
    ],

    "security": {
      "csp": null,

      "dangerousDisableAssetCspModification": true
    }
  },
  "bundle": {
    "android": {
      "minSdkVersion": 26
    },
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
